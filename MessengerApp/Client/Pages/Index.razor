@page "/"

<PageTitle>Index</PageTitle>

<AuthorizeView>
	<Authorized>
		<h1>Hello @context.User.Identity?.Name!</h1>
		<p>
			Start chat <a href="direct">here</a>!
		</p>
	</Authorized>
	<NotAuthorized>
		<h1>You are not logged in!</h1>
		<p>
			Log in to start <a href="direct">chatting</a>!
		</p>
	</NotAuthorized>
</AuthorizeView>
